{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES6"],
        "strict": false,
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "typeRoots": ["node_modules/@types", "node_modules/**/*.d.ts"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src", "types"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "ES6",
            "esModuleInterop": true,
            "moduleResolution": "Node"
        }
    }
}
